<odoo>
    <!-- Menu racine pour Cineprex -->
    <menuitem id="menu_cineprex_root" name="Cineprex" sequence="10"/>

    <!-- Vue Formulaire pour Reservation -->
    <record id="view_reservation_form" model="ir.ui.view">
        <field name="name">reservation.form</field>
        <field name="model">cineprex.reservation</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="customer_name" string="Nom du client"/>
                        <field name="film_id" string="Film"/>
                        <field name="salle_id" string="Salle"/>
                        <field name="reservation_date" string="Date de réservation"/>

                        <!-- Nouveau champ pour choisir la séance -->
                        <field name="session_id" string="Séance"
                            domain="[('salle_id', '=', salle_id),
                                     ('start_time', '&lt;=', reservation_date),
                                     ('end_time', '&gt;=', reservation_date)]"/>
                        <field name="seat_count" string="Nombre de places"/>
                        <field name="remaining_capacity" string="Capacité restante" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vue Liste pour Reservation -->
    <record id="view_reservation_tree" model="ir.ui.view">
        <field name="name">reservation.tree</field>
        <field name="model">cineprex.reservation</field>
        <field name="arch" type="xml">
            <tree>
                <field name="customer_name" string="Nom du client"/>
                <field name="film_id" string="Film"/>
                <field name="salle_id" string="Salle"/>
                <field name="reservation_date" string="Date de réservation"/>
                <field name="session_id" string="Séance"/>
                <field name="seat_count" string="Nombre de places"/>
            </tree>
        </field>
    </record>

    <!-- Action pour Reservation -->
    <record id="action_reservation" model="ir.actions.act_window">
        <field name="name">Réservations</field>
        <field name="res_model">cineprex.reservation</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu pour Reservation -->
    <menuitem id="menu_reservation" name="Réservations" parent="menu_cineprex_root" action="action_reservation"/>
</odoo>
