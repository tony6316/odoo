<odoo>
    <!-- Vue Formulaire pour Film -->
    <record id="view_film_form" model="ir.ui.view">
        <field name="name">film.form</field>
        <field name="model">cineprex.film</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="title" string="Titre"/>
                        <field name="genre" string="Genre"/>
                        <field name="duration" string="Durée (en heures)"/>
                        <field name="release_date" string="Date de sortie"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vue Liste pour Film -->
    <record id="view_film_tree" model="ir.ui.view">
        <field name="name">film.tree</field>
        <field name="model">cineprex.film</field>
        <field name="arch" type="xml">
            <tree>
                <field name="title" string="Titre"/>
                <field name="genre" string="Genre"/>
                <field name="duration" string="Durée"/>
                <field name="release_date" string="Date de sortie"/>
            </tree>
        </field>
    </record>
</odoo>
