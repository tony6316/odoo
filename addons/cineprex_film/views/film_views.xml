<odoo>
    <!-- Vue Formulaire pour Film -->
    <record id="view_film_form" model="ir.ui.view">
        <field name="name">film.form</field>
        <field name="model">cineprex.film</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="title"/>
                        <field name="duration"/>
                        <field name="genre"/>
                        <field name="release_date"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vue Liste pour Film -->
    <record id="view_film_tree" model="ir.ui.view">
        <field name="name">film.tree</field>
        <field name="model">cineprex.film</field>
        <field name="arch" type="xml">
            <tree>
                <field name="title"/>
                <field name="duration"/>
                <field name="genre"/>
                <field name="release_date"/>
            </tree>
        </field>
    </record>
</odoo>
