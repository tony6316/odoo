<odoo>
    <!-- Vue Formulaire pour Séance -->
    <record id="view_seance_form" model="ir.ui.view">
        <field name="name">seance.form</field>
        <field name="model">cineprex.seance</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="film_id" string="Film"/>
                        <field name="salle_id" string="Salle"/>
                        <field name="date" string="Date"/>
                        <field name="start_time" string="Heure de début"/>
                        <field name="end_time" string="Heure de fin"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vue Liste pour Séance -->
    <record id="view_seance_tree" model="ir.ui.view">
        <field name="name">seance.tree</field>
        <field name="model">cineprex.seance</field>
        <field name="arch" type="xml">
            <tree>
                <field name="film_id" string="Film"/>
                <field name="salle_id" string="Salle"/>
                <field name="date" string="Date"/>
                <field name="start_time" string="Heure de début"/>
                <field name="end_time" string="Heure de fin"/>
            </tree>
        </field>
    </record>
</odoo>
